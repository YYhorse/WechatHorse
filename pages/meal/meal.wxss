  margin-left: 50rpx;
  width:150rpx;
  height:150rpx;
}
.ShopTitle{
  display: flex;
  flex-direction: column;
  width: fit-content;
  margin-top: 40rpx;
  margin-left: 40rpx;
}
.ShopName_txt{
  font-size: 50rpx;
  font-weight:bold;
  color: white;
}
.ShopDescription_txt{
  font-size: 30rpx;
