  margin-bottom: 10rpx;
  margin-right: 5rpx;
  color: white;
}
.CallServiceIcon{
  width:35rpx;
  height:35rpx;
  margin-left: 5rpx;
  margin-top: 15rpx;
  margin-right: 10rpx;
}
.MyOrder{
  display: flex;
  flex-direction: row;
  background-color: green;
  border-radius: 10px; 
  margin-top: 10rpx;
  margin-left: 20rpx;
}
.ActivityInfo{
  display: flex;
  position:fixed;
  height:45rpx;
  width: 100%;
  flex-direction: row;
  background-color:gainsboro;
  top: 200rpx;
  align-items: center;
}
.ActivityInfo_txt{
  font-size: 25rpx;
  margin-left: 30rpx;
  color: red;
}
.ShowLayout{
  display: flex;
  position:fixed;
  width: 100%;
  height: 100%;
  flex-direction: row;
  top: 245rpx;
}
.CategoryLayout{
  display: flex;
  flex-direction: column;
  width: 180rpx;
  height:70%;
  background: whitesmoke;
}
.CategoryItemLayout{
  display: flex;
	flex-direction: row;
	padding: 5px 0;
  justify-content:center;
	border-bottom: 1px solid #ededed;
  text-align: center
}
.CategoryName_txt{
  font-size: 30rpx;
  display: flex;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  justify-content:center;
  text-align:center;
  color: "{{index==CurrentCategoryPostion?white:gray}}"
}
.ProductLayout{
   display: flex;
   flex-direction: column;
   background: white;
   width: 80%;
   height:70%;
}
.ProductItemLayout{
  display: flex;
  flex-direction: row;
  height: 150rpx;
  padding: 5px 0;
  border-bottom: 1px solid #ededed;
}
.ProductItemPhoto{
  width:100rpx;
  height:100rpx;
  margin-left: 30rpx;
  margin-top: 25rpx;
}
.ProductItemInfoLayout{
  display: flex;
  width: 350rpx;
  flex-direction: column;
}
.ProductItemName{
  font-size: 40rpx;
  font-weight:bold;
  color: black;
  margin-top: 20rpx;
  margin-left: 30rpx;
  overflow:hidden;      
  text-overflow:ellipsis;
  white-space:nowrap;  
}
.ProductItemDescription{
  font-size: 25rpx;
  color: gray;
  margin-left: 30rpx;
  overflow:hidden;      
  text-overflow:ellipsis;
  white-space:nowrap;  
}
.ProductItemPrice{
  font-size: 30rpx;
  font-weight:bold;
  color: red;
  margin-left: 30rpx;
  margin-top: 10rpx;
}
.ProductItemNumberLayout{
  display: flex;
  width: 100rpx;
  text-align: center;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}
.ImageShow{
  width:50rpx;
  height:50rpx;
}
.ImageHide{
  width:50rpx;
  height:50rpx;
  display: none; 
}
.TextShow{
  font-size: 30rpx;
  font-weight:bold;
  color: black;
  margin-top: 5rpx;
  margin-bottom: 5rpx;
  display: block; 
}
.TextHide{
   display: none; 
}

.add_btn{
  width:50rpx;
  height:50rpx;
}

/*使屏幕变暗  */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

